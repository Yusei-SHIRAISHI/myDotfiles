[alias]
  co = checkout
  st = status
  df = diff
  dt = "!f() { git diff $1 --name-only | fzf -m | xargs sh -c 'vim $@ < /dev/tty' -;}; f"

[push]
  default = upstream

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[core]
  editor = nvim
[mergetool]
  prompt = false
[merge]
  tool = vimdiff
